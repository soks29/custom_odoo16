<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="create_bons_commande_form" model="ir.ui.view" >
        <field name="name">create.bons.commande.wizard</field>
        <field name="model">create.bons.commande</field>
        <field name="arch" type="xml">
            <form string="Create Purchase orders">
                <group>
                    <field name="purchase_orders" options="{'no_create_edit': True}" widget="many2many_tags"/>
                    <field name="cpu" options="{'no_create_edit': True}"/>
                    <field name="ram" options="{'no_create_edit': True}"/>
                    <field name="disk" options="{'no_create_edit': True}"/>
                    <field name="tl_id" options="{'no_create_edit': True}" />
                </group>
                <footer>
                    <button name="create_bons_commande" string="Create" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_bons_commande_wizard" model="ir.actions.act_window">
        <field name="name">Purchase orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.bons.commande</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_bons_commande_form"/>
        <field name="target">new</field>
        <field name="context">{
            'dialog_size' : 'medium',
            }
        </field>
    </record>
</odoo>