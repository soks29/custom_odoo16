<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="create_bons_commande_form" model="ir.ui.view">
        <field name="name">create.bons.commande.wizard</field>
        <field name="model">create.bons.commande</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="cpu"/>
                            <field name="ram"/>
                            <field name="disk"/>
                            <field name="tl_id"/>
                        </group>
                        <group>
                            <field name="limit_date"/>
                            <field name="partner_id"/>
                            <field name="odoo_id"/>
                            <field name="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Purchase order">
                            <field name="purchase_orders"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="create_bons_commande" string="Create" type="object" class="btn-primary"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="purchase_order_list_view" model="ir.ui.view">
        <field name="name">Purchase order list</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="inside">
                <header>
                    <button name="add_instance" string="Create instance"
                            type="object" class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>

    <record id="create_bons_commande_wizard" model="ir.actions.act_window">
        <field name="name">Purchase orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.bons.commande</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_bons_commande_form"/>
        <field name="target">new</field>
        <field name="context">{
            'dialog_size' : 'medium',
            }
        </field>
    </record>
</odoo>