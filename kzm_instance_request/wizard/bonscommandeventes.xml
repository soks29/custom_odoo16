<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Server action -->
        <record model="ir.actions.act_window" id="sale_order_purchase_action">
            <field name="name">Requests</field>
            <field name="res_model">create.bons.command</field>
            <field name="view_mode">form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">new</field>
        </record>

    <record id="create_bons_commande_form" model="ir.ui.view">
        <field name="name">create.bons.command.wizard</field>
        <field name="model">create.bons.command</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="cpu"/>
                            <field name="ram"/>
                            <field name="disk"/>
                            <field name="tl_id"/>
                        </group>
                        <group>
                            <field name="limit_date"/>
                            <field name="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sale order">
                            <field name="sale_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="create_bons_commande" string="Create" type="object" class="btn-primary"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="sale_order_list_view" model="ir.ui.view">
        <field name="name">Sale order list</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="inside">
                <header>
                    <button name="%(sale_order_purchase_action)d" string="Create instance"
                            type="action" class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>