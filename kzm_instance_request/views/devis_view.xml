<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- List view -->
        <record id="quotation_list_view_extend" model="ir.ui.view">
            <field name="name">Quotation list</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="version_odoo_id"/>
                </xpath>
            </field>
        </record>

        <!-- List view_order_tree -->
        <record id="quotation_list_view_extend1" model="ir.ui.view">
            <field name="name">Quotation list</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button string="Create instances"
                                type="action"
                                name="%(kzm_instance_request.create_bons_commande_wizard)d"
                                class="btn-primary" />
                    </header>
                </tree>

            </field>
        </record>

        <!-- Form view -->
        <record id="quotation_form_view_extend" model="ir.ui.view">
            <field name="name">Quotation form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="version_odoo_id"/>
                </xpath>
            </field>
        </record>

        <record id="search_devis_version_odoo" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='campaign_id']" position="after">
                    <group expand="0" string="Group By">
                        <filter
                                name="Odoo versions"
                                string="Odoo Version"
                                context="{'group_by': 'version_odoo_id'}"
                        />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>