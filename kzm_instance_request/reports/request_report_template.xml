    <record id="instance_request_report_temp" model="ir.actions.report">
        <field name="name">Invoices</field>
        <field name="model">kzm.instance.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kzm_instance_request.report_invoice</field>
        <field name="report_file">kzm_instance_request.report_invoice</field>
        <field name="binding_model_id" ref="model_kzm_instance_request"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="oe_structure"/>
                        <div class="row">
                            <div t-if="o.name" class="col-xs-2" style="margin:auto;">
                                <span t-field="o.name"/>
                                <span t-field="o.partner_id.name" style="margin-left:15cm"/>
                                <br/>
                                <br/>
                                <br/>
                                <span t-field="o.odoo_id.name"/>
                                <span t-field="o.tl_id.name" style="margin-left:8cm"/>
                                <span t-field="o.limit_date" style="margin-left:5cm"/>
                            </div>
                            <br/>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <table class="table table-sm o_main_table mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_CPU" class="text-start">CPU</th>
                                    <th name="th_RAM" class="text-end">RAM</th>
                                    <th name="th_DISK" class="text-end">DISK</th>
                                    <th name="th_URL" class="text-end">URL</th>
                                    <th name="th_adress_ip" class="text-end">Address IP</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td name="td_cpu" class="text-start">
                                        <span t-field="o.cpu"/>
                                    </td>
                                    <td name="td_ram" class="text-end">
                                        <span t-field="o.ram"/>
                                    </td>
                                    <td name="td_disk" class="text-end">
                                        <span t-field="o.disk"/>
                                    </td>
                                    <td name="td_url" class="text-end">
                                        <span t-field="o.url"/>
                                    </td>
                                    <td name="td_adress_ip" class="text-end">
                                        <span t-field="o.adress_ip"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>